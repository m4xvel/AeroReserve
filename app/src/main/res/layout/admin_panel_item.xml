<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@null">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/admin_rounded_full"
        android:elevation="10dp"
        android:padding="10dp"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/FIO"
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:background="@drawable/admin_rounded_top"
            android:fontFamily="@font/ibmplexsans_light"
            android:gravity="center"
            android:text="ФИО"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize14sp"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/received_FIO"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:fontFamily="@font/ibmplexsans_light"
            android:gravity="center"
            android:text="Меньшов Максим Александрович"
            android:textColor="@color/black"
            android:textSize="@dimen/TextSize16sp"
            app:layout_constraintEnd_toEndOf="@+id/FIO"
            app:layout_constraintStart_toStartOf="@+id/FIO"
            app:layout_constraintTop_toBottomOf="@+id/FIO" />

        <TextView
            android:id="@+id/number_phone"
            android:layout_width="280dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/admin_blue"
            android:fontFamily="@font/ibmplexsans_light"
            android:gravity="center"
            android:text="Номер телефона"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize14sp"
            app:layout_constraintEnd_toEndOf="@+id/received_FIO"
            app:layout_constraintStart_toStartOf="@+id/received_FIO"
            app:layout_constraintTop_toBottomOf="@+id/received_FIO" />

        <TextView
            android:id="@+id/received_number_phone"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:background="@drawable/border"
            android:fontFamily="@font/ibmplexsans_light"
            android:gravity="center"
            android:text="+7 (951) 000-00-00"
            android:textColor="@color/black"
            android:textSize="@dimen/TextSize16sp"
            app:layout_constraintEnd_toEndOf="@+id/number_phone"
            app:layout_constraintStart_toStartOf="@+id/number_phone"
            app:layout_constraintTop_toBottomOf="@+id/number_phone" />

        <TextView
            android:id="@+id/passport"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/admin_rounded_top"
            android:fontFamily="@font/ibmplexsans_light"
            android:gravity="center"
            android:text="Паспорт"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize14sp"
            app:layout_constraintStart_toStartOf="@+id/received_number_phone"
            app:layout_constraintTop_toBottomOf="@+id/received_number_phone" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@drawable/admin_rounded_bottom"
            app:layout_constraintEnd_toEndOf="@+id/passport"
            app:layout_constraintStart_toStartOf="@+id/passport"
            app:layout_constraintTop_toBottomOf="@+id/passport" />

        <Button
            android:id="@+id/reject_button"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/admin_gray_top"
            android:fontFamily="@font/ibmplexsans_light"
            android:gravity="center"
            android:includeFontPadding="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:letterSpacing="0.05"
            android:text="Отклонить"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/received_number_phone"
            app:layout_constraintTop_toBottomOf="@+id/received_number_phone" />

        <Button
            android:id="@+id/input_button"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:background="@drawable/admin_blue_bottom"
            android:fontFamily="@font/ibmplexsans_light"
            android:gravity="center"
            android:includeFontPadding="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:letterSpacing="0.05"
            android:text="Принять"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/reject_button"
            app:layout_constraintStart_toStartOf="@+id/reject_button"
            app:layout_constraintTop_toBottomOf="@+id/reject_button" />

        <TextView
            android:id="@+id/booking_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_light"
            android:text="-NXj8eQRO_v3YbNmp5kh"
            android:textColor="@color/black"
            android:textSize="@dimen/TextSize10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>